{{#each Blogs}}

<div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content black-text">
          <span class="card-title">{{this.title}} Written By: {{this.User.username}} On: {{this.createdAt}}</span>
         
        </div>
        <div class="card-action">
          <a href="/fullblog/{{this.id}}">See full post</a>
        </div>
      </div>
    </div>
  </div>
    {{/each}}

    